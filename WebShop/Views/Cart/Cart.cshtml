@model IEnumerable<WebShop.Models.Storage>
@{
}

<h1>Корзина</h1>

<div>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Product.Type - @p.Product.Model</td>
                    <td>@p.Product.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>