@model IEnumerable<WebShop.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div>
    <table>
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Color Id</th>
                <th>Brand Id</th>
                <th>Type Id</th>
                <th>Model</th>
                <th>Desc</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Color.Color</td>
                    <td>@p.Brand.Title</td>
                    <td>@p.Type.Title</td>
                    <td>@p.Model</td>
                    <td>@p.Description</td>
                    <td>@p.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>
